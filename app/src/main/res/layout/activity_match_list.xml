<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".MatchListActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_weight="0"
        android:background="@color/colorYellow">

        <android.support.v7.widget.Toolbar
            android:id="@+id/match_list_toobar_title"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/colorYellow"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="My SBs"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:titleTextColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/match_list_button_back"
            android:layout_width="23.8dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/back_btn_dark" />
    </RelativeLayout>


    <ListView
        android:id="@+id/match_list_listView_friends"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="1" />

</LinearLayout>